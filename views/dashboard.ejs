          </li>
          <% for (let i=1; i <=totalPagesTareas; i++) { %>
            <li class="page-item <%= page == i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>">
                <%= i %>
              </a>
            </li>
            <% } %>
              <li class="page-item <%= page == totalPagesTareas ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= page + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
        </ul>
      </nav>


      <div class=" position-relative">
        <h1 class="mb-0 mt-4">Información de Productos:</h1>
      </div>


      <!-- TABLA DE PRODUCTOS de informacion -->
      <hr class="linea-tareas" />
      <div class="table-responsive">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">ID Producto</th>
              <th scope="col">Nombre Producto:</th>
              <th scope="col">Cantidad por Producto</th>
              <th scope="col">Precio Unidad</th>
              <th scope="col">Unidad Existencia</th>
              <th scope="col">Unidad Pedido</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% productos.forEach((producto)=> { %>
              <tr>
                <td>
                  <%= producto.idProducto %>
                </td>
                <td>
                  <%= producto.nombreProducto %>
                </td>
                <td>
                  <%= producto.cantidadPorProducto %>
                </td>
                <td>
                  <%= producto.precioUnidad %>
                </td>
                <td>
                  <%= producto.unidadExistencia %>
                </td>
                <td>
                  <%= producto.unidadPedido %>
                </td>
                <td>
                  <a href="/productos/editar/<%= producto.idProducto %>" class="btn btn-outline-info">Editar</a>
                  <a href="/productos/eliminar/<%= producto.idProducto %>" class="btn btn-outline-danger">Borrar</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Paginación para tareas -->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= page - 1 %>" aria-label="Previous">
