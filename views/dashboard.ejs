                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
        </ul>
      </nav>


      <div class=" position-relative">
        <h1 class="mb-0 mt-4">Información de Bodega con Productos:</h1>
      </div>

      <!-- TABLA DE BODEGA-PRODUCTO de informacion -->
      <hr class="linea-tareas" />
      <div class="table-responsive">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">ID Producto Bodega </th>
              <th scope="col">ID Bodega</th>
              <th scope="col">ID Producto</th>
              <th scope="col">Cantidad</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% bodega_producto.forEach((bodega_producto)=> { %>
              <tr>
                <td>
                  <%= bodega_producto.idProductoBodega %>
                </td>
                <td>
                  <%= bodega_producto.idBodega %>
                </td>
                <td>
                  <%= bodega_producto.idProducto %>
                </td>
                <td>
                  <%= bodega_producto.cantidad %>
                </td>
                <td>
                  <a href="/bodega_producto/editar/<%= bodega_producto.idProductoBodega %>"
                    class="btn btn-outline-info">Editar</a>
                  <a href="/bodega_producto/eliminar/<%= bodega_producto.idProductoBodega %>"
                    class="btn btn-outline-danger">Borrar</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Paginación para tareas -->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= page - 1 %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          <% for (let i=1; i <=totalPagesTareas; i++) { %>
            <li class="page-item <%= page == i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>">
                <%= i %>
              </a>
            </li>
            <% } %>
              <li class="page-item <%= page == totalPagesTareas ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= page + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
        </ul>
      </nav>

      <script src="resources/js/redirectTo.js"></script>
</body>

</html>