<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="resources/img/LogoMaicarSinFondoBLANCO.ico" type="image/x-icon" />
  <link rel="stylesheet" href="resources/css/reporTareas/bootstrap.min.css" />
  <link rel="stylesheet" href="resources/css/ReporTareas/tareas.css" />
  <title>Tareas Diarias</title>
</head>

<body>
  <div class="container-fluid w-500">
    <div class="container-md">
      <img src="resources/img/LogoMaicarSinFondo.png" alt="LogoMaicar" class="mt-4" width="130" height="120" />
    </div>
    <br />
    <div class="container-xl rounded-3 mb-3 align-items-stretch col p-5">
      <div class="d-flex justify-content-end position-absolute top-0 end-0 me-1" onclick="redirectTo('/index');">
        <a href="#">
          <img src="resources/img/ATRAS.png" alt="" />
        </a>
      </div>
      <div class="text-center">
        <h1 class="">ASIGNAR TAREAS</h1>
        <hr class="linea-tareas" />
        <form action="/insertarTarea" method="POST">
          <div class="mb-3">
            <label for="asignadoPor" class="form-label h5">Asignado por:</label>
            <div class="col">
              <input type="text" class="form-control input-sm border border-dark rounded-4" id="asignadoPor"
                name="asignado_por" />
            </div>
          </div>
          <div class="h5">
            <label for="seleArea">Seleccione Are:</label>
            <br />
            <select name="selecciona_area" id="seleArea"
              class="form-control input-lg text-center form-control border border-dark rounded-4">
              <option value="" disabled selected>Seleccione</option>
              <option value="Calidad">Calidad</option>
              <option value="Corte">Corte</option>
              <option value="Costura">Costura</option>
            </select>
          </div>
          <div class="mt-4">
            <label for="descripcion" class="h5">Descripción:</label>
            <br />
            <textarea name="descripcion" id="descripcion" placeholder="Ingrese una Descripcion"
              class="form-control border border-dark rounded-3" rows="5"></textarea>

            <div class="mt-4 h5">
              <label for="fecha">Fecha Inicial:</label>
              <input type="date" id="fecha" name="fecha_inicial" />
            </div>
            <div class="mt-3 h5">
              <label for="fecha_fin">Fecha de Finalización:</label>
              <input type="date" id="fecha_fin" name="fecha_final" />
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-danger btn-lg" name="guardar">
                Guardar
              </button>
            </div>
        </form>
      </div>
    </div>
    <hr />
  </div>

  <script src="resources/js/redirectTo.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert !="undefined" ) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: '<%= showConfirmButton %>',
        timer: '<%= timer %>'
      }).then(() => {
        window.location = '/<%= ruta %>';
      });
    </script>
    <% } %>

</body>

</html>